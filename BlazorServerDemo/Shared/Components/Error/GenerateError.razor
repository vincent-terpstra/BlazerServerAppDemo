
<button class="btn btn-primary" @onclick="@CreateError">Generate Error</button>

@code {
    [CascadingParameter]
    private BlazorServerDemo.Pages.Index? Index { get; set; }

    [Parameter]
    public EventCallback OnReturn { get; set; }
    
    private void CreateError()
    {   
        if (OnReturn.HasDelegate)
                 OnReturn.InvokeAsync();
        
        Index?.SetErrorMessage("Error Generated");
        //throw new NotImplementedException();

        
    }
}